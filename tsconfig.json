{
    "compilerOptions":  {
                            "target":  "ES2020",
                            "module":  "commonjs",
                            "moduleResolution":  "node",
                            "esModuleInterop":  true,
                            "allowSyntheticDefaultImports":  true,
                            "strict":  true,
                            "skipLibCheck":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "resolveJsonModule":  true,
                            "types":  [
                                          "node"
                                      ],
                            "outDir":  "./dist",
                            "baseUrl":  ".",
                            "declaration":  true
                        },
    "include":  [
                    "index.ts",
                    "tests/**/*.ts"
                ]
}
